<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b9cbc0"
    tools:context=".VistaVacuna">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#061216"
                >

                <ImageButton
                    android:id="@+id/backVV"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="start"
                    android:background="@drawable/cancel48"
                    android:src="@drawable/cancel48"
                    app:tint="#b9cbc0"
                    android:onClick="onClick"
                    />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="end"
                    android:background="@drawable/cancel48"
                    android:src="@drawable/cancel48"
                    app:tint="#b9cbc0"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de vacuna"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="#b9cbc0"
                android:background="#061216"
                android:paddingTop="16dp"
                />

            <TextView
                android:id="@+id/nombreVV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aque va el nombre de la vacuna"
                android:textSize="28dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textAlignment="center"
                android:textColor="#b9cbc0"
                android:background="#061216"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:backgroundTint="#b9cbc0"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Esquema de vacunacion:"
                        android:textSize="20dp"
                        android:textColor="#061216"
                        />
                    <TextView
                        android:id="@+id/esquemaVV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aqui va la info"
                        android:textSize="20dp"
                        android:textColor="#061216"
                        android:textStyle="bold"
                        />
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="16dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fecha de aplicacion:"
                        android:textSize="20dp"
                        android:textColor="#061216"
                        />
                    <TextView
                        android:id="@+id/fechaVV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aqui va la info"
                        android:textSize="20dp"
                        android:textColor="#061216"
                        android:textStyle="bold"
                        />
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="16dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Marca:"
                        android:textSize="20dp"
                        android:textColor="#061216"
                        />
                    <TextView
                        android:id="@+id/marcaVV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aqui va la info"
                        android:textSize="20dp"
                        android:textColor="#061216"
                        android:textStyle="bold"
                        />
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="16dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Numero de lote:"
                        android:textSize="20dp"
                        android:textColor="#061216"
                        />
                    <TextView
                        android:id="@+id/loteVV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aqui va la info"
                        android:textSize="20dp"
                        android:textColor="#061216"
                        android:textStyle="bold"
                        />
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="16dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Doctor:"
                        android:textSize="20dp"
                        android:textColor="#061216"
                        />
                    <TextView
                        android:id="@+id/doctorVV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aqui va la info"
                        android:textSize="20dp"
                        android:textColor="#061216"
                        android:textStyle="bold"
                        />
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="16dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Centro de aplicacion:"
                        android:textSize="20dp"
                        android:textColor="#061216"
                        />
                    <TextView
                        android:id="@+id/centroVV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aqui va la info"
                        android:textSize="20dp"
                        android:textColor="#061216"
                        android:textStyle="bold"
                        />
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="16dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Domicilio:"
                        android:textSize="20dp"
                        android:textColor="#061216"
                        />
                    <TextView
                        android:id="@+id/domicilioVV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aqui va la info"
                        android:textSize="20dp"
                        android:textColor="#061216"
                        android:textStyle="bold"
                        />
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="16dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>